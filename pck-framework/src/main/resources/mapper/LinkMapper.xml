<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pck.mapper.LinkMapper">
    <update id="deleteLink">
        UPDATE
            pck_link link
        SET
            link.del_flag = 1
        WHERE
            link.id = #{id}
    </update>
</mapper>