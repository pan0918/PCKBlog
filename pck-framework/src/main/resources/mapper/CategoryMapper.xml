<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pck.mapper.CategoryMapper">
    <update id="deleteCategoryById">
        UPDATE
            pck_category c
        SET
            c.del_flag = 1
        WHERE
            c.id = #{id}
    </update>
</mapper>